{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://xivalexander/exceltransformconfig.schema.json",
  "title": "Excel String Transformation Configuration",
  "description": "Describe how to transform cells",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "revision": {
      "type": "integer",
      "default": 1,
      "minimum": 1
    },
    "description": {
      "type": "string"
    },
    "targetLanguage": {
      "type": "string",
      "enum": [
        "Japanese",
        "English",
        "German",
        "French",
        "ChineseSimplified",
        "ChineseTraditional",
        "Korean"
      ]
    },
    "sourceLanguages": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Japanese",
          "English",
          "German",
          "French",
          "ChineseSimplified",
          "ChineseTraditional",
          "Korean"
        ]
      },
      "minItems": 1,
      "maxItems": 7
    },
    "columnMap": {
      "type": "object",
      "patternProperties": {
        "^(?!#)": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        }
      }
    },
    "pluralMap": {
      "type": "object",
      "patternProperties": {
        "^(?!#)": {
          "type": "array",
          "items": {
            "type": [
              "integer",
              "null"
            ],
            "minItems": 2,
            "maxItems": 4
          }
        }
      }
    },
    "targetGroups": {
      "type": "object",
      "patternProperties": {
        "[^#][A-Za-z0-9]+": {
          "type": [
            "array",
            "integer"
          ],
          "items": {
            "type": [
              "integer"
            ],
            "minItems": 1
          }
        }
      }
    },
    "sourceReplacements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          }
        }
      }
    },
    "replacementTemplates": {
      "type": "object",
      "patternProperties": {
        "[^#][A-Za-z0-9]+": {
          "type": "object",
          "properties": {
            "from": {
              "type": "string"
            },
            "to": {
              "type": "string"
            }
          }
        }
      }
    },
    "ignoredCells": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "id": {
            "type": "integer"
          },
          "column": {
            "type": "integer"
          },
          "forceLanguage": {
            "type": "string",
            "enum": [
              "Japanese",
              "English",
              "German",
              "French",
              "ChineseSimplified",
              "ChineseTraditional",
              "Korean"
            ]
          }
        },
        "required": [
          "name",
          "id",
          "column"
        ]
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "targetGroups": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "replaceTo": {
            "type": "string"
          },
          "stringPattern": {
            "type": "string"
          }
        },
        "required": [
          "targetGroups",
          "replaceTo"
        ]
      }
    }
  },
  "required": [
    "name",
    "targetLanguage",
    "sourceLanguages",
    "targetGroups",
    "rules"
  ]
}